<h2>Create a new drone</h2>

<form method = "POST" action="/drones/create"></form> 

<form method="POST" action="/create" >

  <div class="form-group">
    <label for="droneName">Name</label>
    <input name="name" type="text" class="form-control" id="todoName">
  </div>

  <div class="form-group">
    <label for="dronePropellers">Drone Propellers</label>
    <input name="propellers" type="number" class="form-control" id="dronePropellers">
  </div>

  <div class="form-group">
    <label for="droneMaxSpeed">Drone Maximum Speed</label>
    <input name="maxSpeed" type="number" class="form-control" id="droneMaxSpeed">
  </div>

  <button type="submit" class="btn btn-primary">CREATE A NEW DRONE!</button>
</form>